                        <%else%>
                            <li><%= link_to "College", view_verifications_path %></li>    
                        <%end%>
                    <%else%>
                        <% if params[:controller] =='student_verification'  %>
                            <li><%= link_to "Dashboard", apply_path, :class => "active" %></li>
