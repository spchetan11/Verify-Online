                        <ul class="mn-sub to-left">
                            
                            <% if is_college_admin?  %>
                                <li><%= link_to "Report Template", report_data_url %></li>
                            <%end%>
                            
                            <li><%= link_to "Profile", edit_user_path(current_user) %></li>
                            <li role="separator" class="divider"></li>
