<% provide(:title, 'Reset password') %>

<section class="page-section">
  

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h1>Reset password</h1>
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <% if @user.errors.any? %>
  	    <div id="error_explanation">
  	      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  	      <ul>
  	      <% @user.errors.full_messages.each do |message| %>
  	        <li><%= message %></li>
  	      <% end %>
  	      </ul>
  	    </div>
  	  <% end %>

        <%= hidden_field_tag :email, @user.email %>
        <div class="clearfix">  
          <!-- Password -->
          <div class="form-group"> 
              <%= f.password_field :password , :class => "input-md round form-control",:placeholder =>"Password", :pattern=>".{5,100}"%>
          </div>

          <!-- Password Confirmation-->
          <div class="form-group"> 
              <%= f.password_field :password_confirmation , :class => "input-md round form-control",:placeholder =>"Confirm Password", :pattern=>".{5,100}"%>
          </div>
        </div>

        <div class="clearfix">  
          <!-- Send Button -->
          <div class="align-right pt-10 form-group">
           
            <%= f.submit "Update Password", :class => "submit_btn btn btn-mod btn-medium btn-round"%>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</section>